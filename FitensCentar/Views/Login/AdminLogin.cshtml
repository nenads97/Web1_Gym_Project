
@{
    ViewBag.Title = "AdminLogin";
}
<head>
    <link rel="stylesheet" href="~/Scripts/lookCss.css">
</head>
<h2>Pocetna Vlasnik</h2>
<form style="display:inline-block" action="/Vlasnik/ProfilVlasnika" method="post">
    <input class="form-control" type="hidden" value="@ViewBag.user_name" name="Username" />
    <input class="form-control" type="submit" value="Pregled podataka" />
</form>
<form style="display:inline-block" action="/Vlasnik/PregledTrenera" method="post">
    <input class="form-control" type="hidden" value="@ViewBag.user_name" name="Username" />
    <input type="hidden" value="@ViewBag.user_name" name="AdminUsername" />
    <input class="form-control" type="submit" value="Treneri" />
</form>
<form style="display:inline-block" action="/Vlasnik/FitnesCentriVlasnik" method="post">
    <input type="hidden" value="@ViewBag.user_name" name="Username" />
    <input class="form-control" type="submit" value="Moji fitnes centers" />
</form>
<form style="display:inline-block" action="/Vlasnik/Komentari" method="post">
    <input type="hidden" value="@ViewBag.user_name" name="Username" />
    <input class="form-control" type="submit" value="Komentari" />
</form>
<br />
<br />
<form method="post" action="/Login/AdminLogin">
    <div>Sortiranje:</div>
    RASTUCE <br /><input type="radio" name="typeOfSorting" value="Rastuće" /> <br />
    OPADAJUCE <br /><input type="radio" name="typeOfSorting" value="Opadajuće" />
    <select class="form-control" name="sortBy" required>
        <option value="Naziv"> Naziv</option>
        <option value="Adresa"> Adresa</option>
        <option value="DatumOtvaranja">Datum otvaranja</option>
    </select>
    <br />
    <input type="hidden" value="@ViewBag.user_name" name="Username" />
    <input class="form-control" type="submit" name="Option" value="Sort" />
    <br />
    <div>Naziv:</div><input class="form-control" type="text" name="Naziv" value="" placeholder="Naziv" /><br />
    <div>Adresa:</div><input class="form-control" type="text" name="Adresa" value="" placeholder="ulica broj,grad,postanski broj" /><br />
    <div>Datum otvaranja:</div><input class="form-control" type="text" name="DonjaGranica" placeholder="DonjaGranica" /><br /><input class="form-control" type="text" name="GornjaGranica" placeholder="GornjaGranica" /><br />
    <br />
    <input class="form-control" type="submit" name="Option" value="Find" />
</form>
@if (ViewBag.FitnessCenters == null || ViewBag.FitnessCenters.Count == 0)
{
    <p>Ne postoji nijedan fitnes centar</p>
}
else
{
    <br />
    <br />
    <h2>Fitnes Centri</h2>
    <table class="table table-bordered" border="1">
        <tr><th>Naziv</th><th>Adresa</th><th>DatumOtvaranja</th></tr>
        @foreach (var fitnessCenter in ViewBag.FitnessCenters)
        {
            <tr>
                <td>@fitnessCenter.Naziv</td>
                <td>@fitnessCenter.Adresa</td>
                <td>@fitnessCenter.DatumOtvaranja</td>
                <td>
                    <form action="/Vlasnik/DetaljanPrikazVlasnik" method="post">
                        <input type="submit" name="Detalji" value="Detalji">
                        <input type="hidden" name="Naziv" value="@fitnessCenter.Naziv">
                        <input type="hidden" name="Username" value="@ViewBag.user_name">
                    </form>
                </td>
            </tr>
        }
    </table>
}
